{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "public/*",
    "lib/*",
    "package.json",
    "nodemon.json"
  ],
  "verbose": true,
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "browser/",
    "common/",
    "lib/",
    "server/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}

